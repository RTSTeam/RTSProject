<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Example - example-example36-production</title>
  

  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.3/angular.min.js"></script>
  <script src="js/registration.js"></script>
  <link rel="stylesheet" href="css/registration.css">
  <script src="https://angular-ui.github.io/bootstrap/ui-bootstrap-tpls-0.12.0.js"></script>
  
</head>
<body ng-app="form-example1" ng-controller="appCtrl">
  <div >
      <form name="userForm" class="css-form" ng-submit="submitData(user, 'ajaxResult')" novalidate>
        <div>
          Username:
          <input type="text" ng-model="user.username" name="username" username required/><br />
          <span >{{user.name}}</span>
          <span ng-show="userForm.username.$pending.username">Checking if this name is available ...</span>
          <span ng-show="userForm.username.$error.username">This username is already taken!</span>
        </div>
  
      <div>
         Email:
          <input type="email" ng-model="user.email" name="userEmail" ng-model-options="{ updateOn: 'blur' }"  class="form-control" required />
          <div ng-show="userForm.userEmail.$dirty && form.userEmail.$invalid">Invalid:
              <span ng-show="userForm.userEmail.$error.required">Tell us your email.</span>
              <span ng-show="userForm.userEmail.$error.email">This is not a valid email.</span>
          </div>
      </div>
      <div>
      	Password:
      	<input type="text" ng-model="user.password" name="password">
      </div>
      <div>
      	Firstname:
      	<input type="text" ng-model="user.fname" name="fname">
      </div>
      <div>
      	Lastname:
      	<input type="text" ng-model="user.lname" name="lname">
      </div>
      
        <div ng-controller="DatepickerDemoCtrl">
          Date of Birthday
           <input type="text" ng-model="user.birthday" name="birthday" class="form-control" datepicker-popup="{{userFormat}}" is-open="opened" min-date="1990-01-01" max-date="today" datepicker-options="dateOptions"  data-date-format="mm/dd/yyyy" ng-required="true" close-text="Close" />
                  <span class="input-group-btn">
                    <button type="button" class="btn btn-default" ng-click="open($event)">
                      <i class="glyphicon glyphicon-calendar"></i>
                    </button>
                  </span>
        </div>
      
      <div >
        Gender: 
        <input type="radio" ng-model="user.gender" value="male" />male
        <input type="radio" ng-model="user.gender" value="female" />female</div>
      </div>
      <button type="button" ng-click="resetForm()" ng-disabled="!isUserChanged()">Reset</button>
	  <button type="submit" ng-disabled="userForm.$invalid">Submit</button>
      <pre>form = {{user | json}}</pre>
      <pre>master = {{master | json}}</pre>
    </form>
    
    <br />
    <div ng-show="canShow">
		<h2><font color="green" id="welcome">{{welcomeMsg}}</font></h2>
		<table border="1" width="200">
			<thead>
        		<tr>
        		  <th>userid</th>
		          <th>username</th>
		          <th>first name</th>
		          <th>last name</th>
		          <th>DOB</th>
		          <th>email</th>
        		</tr>
      		</thead>
      		<tbody>
        		<tr ng-repeat="user in users">
          			<td>{{user.userid}}</td>
          			<td>{{user.name}}</td>
          			<td>{{user.fname}}</td>
          			<td>{{user.lname}}</td>
          			<td>{{user.dob}}</td>
          			<td>{{user.email}}</td>
        		</tr>
      		</tbody>
		</table>
	</div>
  </div>
</body>
</html>